####  GENERAL SETTINGS  ####
#set mod to super key
set $mod Mod4
# Window title/bar font. Bar can be overridden.
font pango:monospace 10
bar {
	#hidden bar shows on mod keypress
	mode hide
        status_command i3status 
	font pango:monospace 10
}
#focus/mouse options
focus_follows_mouse no

#alert sounds
set $bark paplay /usr/share/sounds/gnome/default/alerts/bark.ogg

####  FUNCTION KEYS  ####
# audio buttons
bindsym XF86AudioMute exec "amixer set Master toggle"
bindsym Control+XF86AudioRaiseVolume exec "amixer set Master 1%+; $bark"
bindsym Control+XF86AudioLowerVolume exec "amixer set Master 1%-; $bark"
bindsym XF86AudioRaiseVolume exec "amixer set Master 5%+; $bark"
bindsym XF86AudioLowerVolume exec "amixer set Master 5%-; $bark"
bindsym Shift+XF86AudioRaiseVolume exec "amixer set Master 20%+; $bark"
bindsym Shift+XF86AudioLowerVolume exec "amixer set Master 20%-; $bark"
# super+audio buttons
bindsym $mod+XF86AudioMute exec "gnome-terminal -e alsamixer"

