##~~ CTRL+SUPER (System commands)
#~ e 	- End i3 session (log out)
bindsym $mod+Control+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
#~ l	- Lock screen
bindsym $mod+Control+l exec "c=$(shuf ~/.personalPreferences/favoriteColors | head -1 | cut -f2); i3lock --color $c"
#~ r	- Reload the i3 configuration file.
bindsym $mod+Control+r reload
#~ R	- Restart i3.
bindsym $mod+Shift+Control+r restart

